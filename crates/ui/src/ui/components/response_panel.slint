// Response Panel Component
// Displays response data with tabs for Body, Headers, and Tests

import { TextEdit, ScrollView } from "std-widgets.slint";
import { VortexPalette, VortexTypography, VortexSpacing, VortexShape } from "../theme.slint";
import { TestPanel, TestAssertion, TestSummary, AssertionDialog } from "test_panel.slint";

// Response header for display
export struct ResponseHeader {
    name: string,
    value: string,
}

// State enum values (must match Rust side)
// 0 = Idle, 1 = Loading, 2 = Success, 3 = Error

export component ResponsePanel inherits Rectangle {
    // State: 0=Idle, 1=Loading, 2=Success, 3=Error
    in property <int> state: 0;

    // Response data (for Success state)
    in property <int> status-code: 0;
    in property <string> status-text: "";
    in property <string> response-body: "";
    in property <string> duration: "";
    in property <string> size: "";
    in property <[ResponseHeader]> response-headers: [];

    // Error data (for Error state)
    in property <string> error-title: "";
    in property <string> error-message: "";
    in property <[string]> error-suggestions: [];

    // Loading data
    in property <string> elapsed-time: "0ms";

    // Tab state: 0=Body, 1=Headers, 2=Tests
    in-out property <int> active-tab: 0;

    // Sprint 06: Track if body is formatted
    in-out property <bool> is-formatted: false;

    // Sprint 07: Test assertions
    in property <[TestAssertion]> test-assertions: [];
    in property <TestSummary> test-summary: { total: 0, passed: 0, failed: 0, duration-ms: 0 };
    in property <bool> has-test-results: false;
    in property <bool> is-running-tests: false;
    in-out property <bool> show-assertion-dialog: false;
    in-out property <bool> is-editing-assertion: false;
    in-out property <int> assertion-type-index: 0;
    in-out property <string> assertion-status-value: "200";
    in-out property <string> assertion-max-time: "1000";
    in-out property <string> assertion-header-name: "";
    in-out property <string> assertion-header-value: "";
    in-out property <string> assertion-pattern: "";
    in-out property <string> assertion-text: "";
    in-out property <string> assertion-json-path: "";
    in-out property <string> assertion-expected: "";

    callback retry-clicked();
    callback copy-body-clicked();
    // Sprint 06: Format callbacks
    callback format-body-clicked();
    callback copy-formatted-clicked();
    // Sprint 07: Test callbacks
    callback run-tests();
    callback add-test-assertion();
    callback save-test-assertion();
    callback remove-test-assertion(int);
    callback edit-test-assertion(int);
    callback close-assertion-dialog();

    background: VortexPalette.bg-secondary;
    min-height: 200px;

    // All states are always present, visibility controlled by opacity
    // This prevents layout recalculation when state changes

    // Idle state - show placeholder with rocket emoji (Postman style)
    Rectangle {
        x: 0;
        y: 0;
        width: parent.width;
        height: parent.height;
        opacity: state == 0 ? 1 : 0;
        visible: state == 0;
        background: VortexPalette.bg-primary;

        VerticalLayout {
            alignment: center;
            spacing: VortexSpacing.lg;

            // Rocket emoji
            Text {
                text: "\u{1F680}";
                font-size: 64px;
                horizontal-alignment: center;
                opacity: 0.2;
            }

            Text {
                text: "Enter the URL and click Send to get a response";
                color: VortexPalette.text-muted;
                font-size: VortexTypography.font-md;
                horizontal-alignment: center;
            }
        }
    }

    // Loading state - show overlay with spinner (Postman style)
    Rectangle {
        x: 0;
        y: 0;
        width: parent.width;
        height: parent.height;
        opacity: state == 1 ? 1 : 0;
        visible: state == 1;
        background: VortexPalette.bg-primary;

        // Semi-transparent overlay
        Rectangle {
            width: parent.width;
            height: parent.height;
            background: VortexPalette.bg-base;
            opacity: 0.8;
        }

        VerticalLayout {
            alignment: center;
            spacing: VortexSpacing.md;

            // Spinner ring
            Rectangle {
                width: 32px;
                height: 32px;
                border-radius: 16px;
                border-width: 3px;
                border-color: VortexPalette.accent;
                opacity: 0.3;
            }

            Text {
                text: "Sending request...";
                color: VortexPalette.text-secondary;
                font-size: VortexTypography.font-sm;
                horizontal-alignment: center;
            }

            Text {
                text: elapsed-time;
                color: VortexPalette.text-muted;
                font-size: VortexTypography.font-xs;
                horizontal-alignment: center;
            }
        }
    }

    // Success state - show response with tabs
    Rectangle {
        x: 0;
        y: 0;
        width: parent.width;
        height: parent.height;
        opacity: state == 2 ? 1 : 0;
        visible: state == 2;

        VerticalLayout {
            spacing: 0;

            // Status bar (Postman style)
            Rectangle {
                height: 32px;
                background: VortexPalette.bg-secondary;

                // Bottom border
                Rectangle {
                    x: 0;
                    y: parent.height - 1px;
                    width: parent.width;
                    height: 1px;
                    background: VortexPalette.border-default;
                }

                HorizontalLayout {
                    padding-left: VortexSpacing.lg;
                    padding-right: VortexSpacing.lg;
                    spacing: VortexSpacing.xxl;

                    // Status code badge
                    HorizontalLayout {
                        spacing: VortexSpacing.xs;

                        Text {
                            text: "Status:";
                            color: VortexPalette.text-muted;
                            font-size: VortexTypography.font-xs;
                            vertical-alignment: center;
                        }

                        Text {
                            text: status-code + " " + status-text;
                            color: root.status-color();
                            font-size: VortexTypography.font-xs;
                            font-weight: VortexTypography.weight-semibold;
                            vertical-alignment: center;
                        }
                    }

                    // Duration
                    HorizontalLayout {
                        spacing: VortexSpacing.xs;

                        Text {
                            text: "Time:";
                            color: VortexPalette.text-muted;
                            font-size: VortexTypography.font-xs;
                            vertical-alignment: center;
                        }

                        Text {
                            text: duration;
                            color: root.status-color();
                            font-size: VortexTypography.font-xs;
                            font-weight: VortexTypography.weight-semibold;
                            vertical-alignment: center;
                        }
                    }

                    // Size
                    HorizontalLayout {
                        spacing: VortexSpacing.xs;

                        Text {
                            text: "Size:";
                            color: VortexPalette.text-muted;
                            font-size: VortexTypography.font-xs;
                            vertical-alignment: center;
                        }

                        Text {
                            text: size;
                            color: root.status-color();
                            font-size: VortexTypography.font-xs;
                            font-weight: VortexTypography.weight-semibold;
                            vertical-alignment: center;
                        }
                    }

                    Rectangle { horizontal-stretch: 1; }

                    // Format and Copy buttons (only for body tab)
                    if active-tab == 0: HorizontalLayout {
                        spacing: VortexSpacing.xs;

                        // Format button
                        Rectangle {
                            width: 70px;
                            height: 24px;
                            background: format-touch.has-hover ? VortexPalette.bg-hover : transparent;
                            border-radius: VortexShape.radius-sm;

                            Text {
                                text: is-formatted ? "Raw" : "Format";
                                color: VortexPalette.text-accent;
                                font-size: VortexTypography.font-sm;
                                horizontal-alignment: center;
                                vertical-alignment: center;
                            }

                            format-touch := TouchArea {
                                clicked => { format-body-clicked(); }
                            }
                        }

                        // Copy button
                        Rectangle {
                            width: 60px;
                            height: 24px;
                            background: copy-touch.has-hover ? VortexPalette.bg-hover : transparent;
                            border-radius: VortexShape.radius-sm;

                            Text {
                                text: "Copy";
                                color: VortexPalette.text-accent;
                                font-size: VortexTypography.font-sm;
                                horizontal-alignment: center;
                                vertical-alignment: center;
                            }

                            copy-touch := TouchArea {
                                clicked => { copy-body-clicked(); }
                            }
                        }
                    }
                }
            }

            // Tab bar
            Rectangle {
                height: 36px;
                background: VortexPalette.bg-secondary;
                border-width: 1px;
                border-color: VortexPalette.border-default;

                HorizontalLayout {
                    padding-left: VortexSpacing.sm;
                    spacing: 0;

                    // Body tab
                    Rectangle {
                        width: 80px;
                        height: 35px;
                        background: active-tab == 0 ? VortexPalette.bg-tertiary : transparent;

                        // Active indicator line at bottom
                        Rectangle {
                            x: 0;
                            y: parent.height - 2px;
                            width: parent.width;
                            height: 2px;
                            background: active-tab == 0 ? VortexPalette.primary : transparent;
                        }

                        states [
                            hover when body-tab-touch.has-hover && active-tab != 0: {
                                background: VortexPalette.bg-hover;
                            }
                        ]

                        Text {
                            text: "Body";
                            color: active-tab == 0 ? VortexPalette.text-accent : VortexPalette.text-secondary;
                            font-size: VortexTypography.font-sm;
                            font-weight: active-tab == 0 ? VortexTypography.weight-bold : VortexTypography.weight-normal;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }

                        body-tab-touch := TouchArea {
                            clicked => { active-tab = 0; }
                        }
                    }

                    // Headers tab
                    Rectangle {
                        width: 100px;
                        height: 35px;
                        background: active-tab == 1 ? VortexPalette.bg-tertiary : transparent;

                        // Active indicator line at bottom
                        Rectangle {
                            x: 0;
                            y: parent.height - 2px;
                            width: parent.width;
                            height: 2px;
                            background: active-tab == 1 ? VortexPalette.primary : transparent;
                        }

                        states [
                            hover when headers-tab-touch.has-hover && active-tab != 1: {
                                background: VortexPalette.bg-hover;
                            }
                        ]

                        HorizontalLayout {
                            alignment: center;
                            spacing: VortexSpacing.xs;

                            Text {
                                text: "Headers";
                                color: active-tab == 1 ? VortexPalette.text-accent : VortexPalette.text-secondary;
                                font-size: VortexTypography.font-sm;
                                font-weight: active-tab == 1 ? VortexTypography.weight-bold : VortexTypography.weight-normal;
                                vertical-alignment: center;
                            }

                            // Header count badge
                            if response-headers.length > 0: Rectangle {
                                width: 24px;
                                height: 18px;
                                background: active-tab == 1 ? VortexPalette.primary : VortexPalette.bg-tertiary;
                                border-radius: 9px;

                                Text {
                                    text: response-headers.length;
                                    color: active-tab == 1 ? VortexPalette.on-primary : VortexPalette.text-secondary;
                                    font-size: VortexTypography.font-xs;
                                    font-weight: VortexTypography.weight-bold;
                                    horizontal-alignment: center;
                                    vertical-alignment: center;
                                }
                            }
                        }

                        headers-tab-touch := TouchArea {
                            clicked => { active-tab = 1; }
                        }
                    }

                    // Tests tab
                    Rectangle {
                        width: 90px;
                        height: 35px;
                        background: active-tab == 2 ? VortexPalette.bg-tertiary : transparent;

                        // Active indicator line at bottom
                        Rectangle {
                            x: 0;
                            y: parent.height - 2px;
                            width: parent.width;
                            height: 2px;
                            background: active-tab == 2 ? VortexPalette.primary : transparent;
                        }

                        states [
                            hover when tests-tab-touch.has-hover && active-tab != 2: {
                                background: VortexPalette.bg-hover;
                            }
                        ]

                        HorizontalLayout {
                            alignment: center;
                            spacing: VortexSpacing.xs;

                            Text {
                                text: "Tests";
                                color: active-tab == 2 ? VortexPalette.text-accent : VortexPalette.text-secondary;
                                font-size: VortexTypography.font-sm;
                                font-weight: active-tab == 2 ? VortexTypography.weight-bold : VortexTypography.weight-normal;
                                vertical-alignment: center;
                            }

                            // Test count badge
                            if test-assertions.length > 0: Rectangle {
                                width: 24px;
                                height: 18px;
                                background: has-test-results ?
                                    (test-summary.failed == 0 ? VortexPalette.status-success : VortexPalette.status-error) :
                                    (active-tab == 2 ? VortexPalette.primary : VortexPalette.bg-tertiary);
                                border-radius: 9px;

                                Text {
                                    text: test-assertions.length;
                                    color: has-test-results || active-tab == 2 ? white : VortexPalette.text-secondary;
                                    font-size: VortexTypography.font-xs;
                                    font-weight: VortexTypography.weight-bold;
                                    horizontal-alignment: center;
                                    vertical-alignment: center;
                                }
                            }
                        }

                        tests-tab-touch := TouchArea {
                            clicked => { active-tab = 2; }
                        }
                    }

                    Rectangle { horizontal-stretch: 1; }
                }
            }

            // Tab content
            Rectangle {
                vertical-stretch: 1;
                background: VortexPalette.bg-input;
                border-width: 1px;
                border-color: VortexPalette.border-default;
                clip: true;

                // Body tab content
                if active-tab == 0: TextEdit {
                    x: 8px;
                    y: 8px;
                    width: parent.width - 16px;
                    height: parent.height - 16px;
                    text: response-body;
                    read-only: true;
                    font-size: VortexTypography.font-base;
                    wrap: word-wrap;
                }

                // Headers tab content
                if active-tab == 1: ScrollView {
                    x: 0;
                    y: 0;
                    width: parent.width;
                    height: parent.height;

                    VerticalLayout {
                        padding: VortexSpacing.sm;
                        spacing: 2px;

                        for header[index] in response-headers: Rectangle {
                            height: 32px;
                            background: mod(index, 2) == 0 ? VortexPalette.bg-secondary : VortexPalette.bg-tertiary;
                            border-radius: VortexShape.radius-sm;

                            HorizontalLayout {
                                padding: VortexSpacing.sm;
                                spacing: VortexSpacing.md;

                                Text {
                                    width: 200px;
                                    text: header.name;
                                    color: VortexPalette.text-accent;
                                    font-size: VortexTypography.font-sm;
                                    font-weight: VortexTypography.weight-medium;
                                    overflow: elide;
                                    vertical-alignment: center;
                                }

                                Text {
                                    horizontal-stretch: 1;
                                    text: header.value;
                                    color: VortexPalette.text-primary;
                                    font-size: VortexTypography.font-sm;
                                    overflow: elide;
                                    vertical-alignment: center;
                                }
                            }
                        }

                        if response-headers.length == 0: Rectangle {
                            height: 100px;

                            Text {
                                text: "No response headers";
                                color: VortexPalette.text-placeholder;
                                font-size: VortexTypography.font-sm;
                                horizontal-alignment: center;
                                vertical-alignment: center;
                            }
                        }
                    }
                }

                // Tests tab content
                if active-tab == 2: TestPanel {
                    x: 0;
                    y: 0;
                    width: parent.width;
                    height: parent.height;
                    assertions: test-assertions;
                    summary: test-summary;
                    has-results: has-test-results;
                    is-running: is-running-tests;

                    run-tests => { root.run-tests(); }
                    add-assertion => { root.add-test-assertion(); }
                    remove-assertion(id) => { root.remove-test-assertion(id); }
                    edit-assertion(id) => { root.edit-test-assertion(id); }
                }
            }
        }
    }

    // Assertion dialog overlay
    AssertionDialog {
        show: show-assertion-dialog;
        is-edit: is-editing-assertion;
        assertion-type-index <=> root.assertion-type-index;
        status-value <=> root.assertion-status-value;
        max-time-ms <=> root.assertion-max-time;
        header-name <=> root.assertion-header-name;
        header-value <=> root.assertion-header-value;
        pattern <=> root.assertion-pattern;
        text-value <=> root.assertion-text;
        json-path <=> root.assertion-json-path;
        expected-value <=> root.assertion-expected;

        close => { root.close-assertion-dialog(); }
        save => { root.save-test-assertion(); }
        type-changed(idx) => { }
    }

    // Error state - show error details
    Rectangle {
        x: 0;
        y: 0;
        width: parent.width;
        height: parent.height;
        opacity: state == 3 ? 1 : 0;
        visible: state == 3;

        VerticalLayout {
            alignment: center;
            spacing: VortexSpacing.lg;
            padding: VortexSpacing.xl;

            // Error icon
            Rectangle {
                width: 48px;
                height: 48px;
                border-radius: 24px;
                background: #f14c4c20;

                Text {
                    text: "!";
                    color: VortexPalette.status-error;
                    font-size: 24px;
                    font-weight: 700;
                    horizontal-alignment: center;
                    vertical-alignment: center;
                }
            }

            // Error title
            Text {
                text: error-title;
                color: VortexPalette.status-error;
                font-size: VortexTypography.font-xl;
                font-weight: VortexTypography.weight-bold;
                horizontal-alignment: center;
            }

            // Error message
            Text {
                text: error-message;
                color: VortexPalette.text-primary;
                font-size: VortexTypography.font-base;
                horizontal-alignment: center;
                wrap: word-wrap;
            }

            // Suggestions
            if error-suggestions.length > 0: Rectangle {
                background: VortexPalette.bg-tertiary;
                border-radius: VortexShape.radius-sm;

                VerticalLayout {
                    padding: VortexSpacing.md;
                    spacing: VortexSpacing.sm;

                    Text {
                        text: "Suggestions:";
                        color: VortexPalette.text-secondary;
                        font-size: VortexTypography.font-sm;
                        font-weight: VortexTypography.weight-medium;
                    }

                    for suggestion in error-suggestions: HorizontalLayout {
                        spacing: VortexSpacing.sm;

                        Text {
                            text: "-";
                            color: VortexPalette.text-secondary;
                            font-size: VortexTypography.font-base;
                        }

                        Text {
                            text: suggestion;
                            color: VortexPalette.text-primary;
                            font-size: VortexTypography.font-base;
                            wrap: word-wrap;
                        }
                    }
                }
            }

            // Retry button
            Rectangle {
                width: 100px;
                height: 32px;
                background: VortexPalette.button-primary;
                border-radius: VortexShape.radius-sm;

                states [
                    hover when retry-touch.has-hover: {
                        background: VortexPalette.button-primary-hover;
                    }
                ]

                Text {
                    text: "Retry";
                    color: white;
                    font-size: VortexTypography.font-base;
                    font-weight: VortexTypography.weight-medium;
                    horizontal-alignment: center;
                    vertical-alignment: center;
                }

                retry-touch := TouchArea {
                    clicked => { retry-clicked(); }
                }
            }
        }
    }

    // Helper function for status color
    pure function status-color() -> color {
        if status-code >= 200 && status-code < 300 { return VortexPalette.status-success; }
        if status-code >= 300 && status-code < 400 { return VortexPalette.status-info; }
        if status-code >= 400 && status-code < 500 { return VortexPalette.status-warning; }
        if status-code >= 500 { return VortexPalette.status-error; }
        return VortexPalette.text-secondary;
    }
}
